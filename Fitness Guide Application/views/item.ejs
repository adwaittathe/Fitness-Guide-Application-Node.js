<div>
  <aside>
    <div class="exercise_containts">
    <div class="barbelldiv">
    <div class="barbell">

    <p class="item_barbell">Exercises > <%= item.itemCategory %> > <%= item.itemName %>  </p>
    <h2 id="barbell_title"><%= item.itemName %></h2>
    <p><%= item.itemCategory %></p>
    <br>
    <img class="workout_Image" src="<%= item.itemURL %>" alt="Workout Image">
