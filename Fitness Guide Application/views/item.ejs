    <br>

    <div class="btn_star_align_div">

    <a href="/categories" class="a_button"> <img src="/assets/images/back.png" class="save_image" alt="Back"> Back </a>

    <form method="Post" action="/profile/myItems" id="save_form">
    <input type="hidden" name="itemCode" value="<%= item.itemCode %>"/>
    <input type="hidden" name="action" value="save"/>
    <a href="javascript:{}" onclick="document.getElementById('save_form').submit();" class="a_button"><img src="/assets/images/save.png" class="save_image" alt="Save it">Save it</a></p>
    </form>


    <a href="/categories/item/feedback/<%=item.itemCode %>" class="a_button"><img src="/assets/images/star.png" class="save_image" alt="Rate">Rate it</a>

    <%


    for(let i=0; i< item.itemRating ; i++)
    {
      %>
      <span class="filled_star">★</span>
  <%  } %>

  <%
  for(let i=0; i< (5-item.itemRating) ; i++)
  {
    %>
    <span class="filled_star">☆</span>
<%  } %>



</div>
    </div>
    <br>
